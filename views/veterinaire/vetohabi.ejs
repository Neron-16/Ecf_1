<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>gestion des commentaires sur l'état de l'habitat</title>
</head>
<body>

  
    <section class="hero is-success is-small">      
        <div class="hero-body">
          <div class="container has-text-centered">
            <h1 class="title is-1 has-text-left">Habitats</h1>
            <br>
            <h4 class="title is-1 has-text-centered">L'état de l'habitat</h4>
            <br>
            <section class="hero is-white">
              <div class="hero-body">
                <div class="table-container">
                  <table class="table is-fullwidth">
                    <tbody>
                        <tr>
                          <th class="is-light">Habitat</th>
                          <th class="is-light">Etat de l'habitat</th>
                          <th class="is-light">Besoins d'amélioration</th>
                          <th class="is-light">Commentaire</th>
                          <th class="is-light">Modifier</th>
                          <th class="is-light">Supprimer</th>
                        </tr>
                        <% resultat.forEach((com)=> { %>
                        <tr> 
                        <form action="/veterinaire/vetohabi/change/<%= com.habitat_id %>" method="post">
                          <td><input type="text" name="nom" class="input"  value="<%= com.nom %>"></td>
                          <td><input type="text" name="etat_habitat" class="input"  value="<%= com.etat_habitat %>"></td>
                          <td><input type="text" name="besoin_amelioration" class="input"  value="<%= com.besoin_amelioration %>"></td>
                          <td><input type="text" name="commentaire_habitat" class="input"  value="<%= com.commentaire_habitat %>"></td>
                          <th><input type="submit" value="modifier" class="button is-warning"></th>
                        </form>
                         <form action="/veterinaire/vetohabi/delete/<%= com.habitat_id %>" method="post">
                          <th><input type="submit" value="supprimer" class="button is-danger"></th> 
                        </form>
                        </tr>
                        <% }); %>
                      </tbody>
                      <tbody>
                        <tr>
                          <th class="is-light">Habitat</th>
                          <th class="is-light">Etat de l'habitat</th>
                          <th class="is-light">Besoins d'amélioration</th>
                          <th class="is-light">Commentaire</th>
                          <th class="is-light">Ajouter</th>
                        </tr>
                        <tr> 
                      <form action="/veterinaire/vetohabi/add" method="post">
                          <td><input type="text" name="nom" class="input"  value=""></td>
                          <td><input type="text" name="etat_habitat" class="input"  value=""></td>
                          <td><input type="text" name="besoin_amelioration" class="input"  value=""></td>
                          <td><input type="text" name="commentaire_habitat" class="input"  value=""></td>
                          <th><input type="submit" value="Ajouter" class="button is-info"></th> 
                      </form>
                        </tr>
                      </tbody>
                  </table>
                </div>
              </div>
            </section>
          </div>
        </div>
    </section> 

    <%- include ("../partials/dashbordve.ejs") %>
</body>
</html>